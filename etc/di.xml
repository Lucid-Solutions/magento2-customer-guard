<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="LucidSolutions\CustomerGuard\Model\ConfigInterface" type="LucidSolutions\CustomerGuard\Model\Config" />
    <preference for="LucidSolutions\CustomerGuard\Model\RegisterConditionInterface" type="LucidSolutions\CustomerGuard\Model\RegisterConditions" />
    <type name="Magento\Customer\Api\AccountManagementInterface">
        <plugin name="lucidSolutionsCustomerGuardConditions" type="LucidSolutions\CustomerGuard\Plugin\AccountManagementPlugin" />
    </type>
    <type name="LucidSolutions\CustomerGuard\Model\RegisterConditions">
        <arguments>
            <argument name="conditions" xsi:type="array">
                <item name="blockedIps" xsi:type="object">LucidSolutions\CustomerGuard\Model\BlockedIpsCondition</item>
                <item name="blockedNames" xsi:type="object">LucidSolutions\CustomerGuard\Model\BlockedNamesCondition</item>
                <item name="emailDomains" xsi:type="object">LucidSolutions\CustomerGuard\Model\EmailDomainsCondition</item>
                <item name="nameLength" xsi:type="object">LucidSolutions\CustomerGuard\Model\NameLengthCondition</item>
            </argument>
        </arguments>
    </type>
</config>
